<!DOCTYPE html>
<html lang="en">
<%- include('partials/head',{ title : 'NUEVO PRODUCTO' }) %>

  <body class="login">
    <%- include('partials/header') %>

      <main class="container">
        <div class="row mt-5">
          <div class="col-12 col-md-10 col-lg-8  mx-auto">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title">Nuevo producto</h4>
              </div>
              <div class="card-body">
                <form action="" method="POST" class="row" enctype="multipart/form-data">
                  <div class="col-12 col-md-6 mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" placeholder="Nombre del producto" name="name">
                    <!-- Mensaje de error para el nombre si es necesario -->
                    <small class="ms-2 text-danger"><%= locals.errors && (errors.name && errors.name.msg) %></small>
                  </div>
                  <div class="col-12 col-md-6 mb-3">
                    <label for="price" class="form-label">Marca</label>
                    <input type="text" class="form-control" id="brand" name="brand">                  
                  </div>
                  <div class="col-12 col-md-6 mb-3">
                    <label for="price" class="form-label">Precio</label>
                    <input type="number" class="form-control" id="price" name="price">
                    <!-- Mensaje de error para el precio si es necesario -->
                    <small class="ms-2 text-danger"><%= locals.errors && (errors.price && errors.price.msg) %></small>
                  </div>
                  <div class="col-12 col-md-6 mb-3">
                    <label for="discount" class="form-label">Descuento</label>
                    <input type="number" class="form-control" id="discount" name="discount">
                  </div>
                  <div class="col-12 col-md-6 mb-3">
                    <label for="formGroupExampleInput2" class="form-label">Estado</label>
                    <select class="form-select" aria-label="Default select example" name="estado" id="estado">
                      <option value="in-sale">En oferta</option>
                      <option value="destacado" >Destacado</option>
                      
                      </select>
                  </div>
                    <div class="col-12 mb-3"></div>
                    <label for="description" class="form-label">Descripción</label>
                    <textarea class="form-control" style="resize: none;" name="description" id="description"></textarea>
                    <!-- Mensaje de error para la descripción si es necesario -->
                    <small class="ms-2 text-danger"><%= locals.errors && (errors.description && errors.description.msg) %></small>
                  </div>
                  <div class="col-12 d-flex justify-content-end align-items-center gap-2 mb-3">
                    <label for="image" class="btn btn-secondary"> <i class="fas fa-file-image"></i> Agregar imagen</label>
                    <input hidden class="form-control" type="file" id="image" name="image">
                    <button class="btn btn-dark" type="submit"><i class="far fa-save"></i> Guardar cambios</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </main>
  </body>

</html>