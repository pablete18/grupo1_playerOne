<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

<body class="home">

  <%- include('partials/header') %>

    <main class="home__main">
        <div class="main__div__banner">
          <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/images/banner/banner_home1.png" class="d-block w-100 h-300px p-1" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/images/banner/banner_home2.jpg" class="d-block w-100 h-300px" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/images/banner/banner_home3.jpg" class="d-block w-100 h-300px" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>

   
        <section class="main_section">
          <% products.forEach(product => { %>
            <% if (product.estado === 'in-sale') { %>            
             <h2>Oferta de la Semana</h2>
            <article class="main__section__article--ofertas">
                <h1><%=product.name %></h1>
                <h3>$<%= product.precio %></h3>
                <img src="/images/detalleProducto_1.jpg" alt="" width="100%">
                <a href="/products/productDetail/<%= product.id %>"> Ver detalle</a>
            </article>
            <% } %>
          <% }) %>
           
        </section>

        <section class="main__section__productosdestacados">
          <h2>Nuestro productos destacados</h2>
          <article class="">
            <div class="swiper mySwiper">
              <div class="swiper-wrapper">
          <% products.forEach(product => { %>
            <% if (product.estado === 'destacado'){ %>           
                      <div class="swiper-slide">
                        <div class="card">
                            <img src="/images/products/product-1.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">$<%= product.precio %></h5>
                                <p class="card-text"><%= product.descripcion %></p>
                                <a href="/products/productDetail/<%= product.id %>" class="btn btn-primary">ver detalle</a>
                            </div>
                        </div>
                    </div>
                 
            <% } %>
           
          <% }) %>   
        </div>
          <div class="swiper-pagination"></div>
        </div> 
        </article>    
              
              
        </section>
        <section class="main__section__marcas">
        <h4>Las mejores marcas para vos</h4>
        <slider class="main__section__slider--marcas">
            
            <img src="/images/marcas/marcas-1.png" alt="">
            <img src="/images/marcas/marcas-2.png" alt="">
            <img src="/images/marcas/marcas-3.png" alt="">
            <img src="/images/marcas/marcas-4.png" alt="">
            <img src="/images/marcas/marcas-5.png" alt="">
            <img src="/images/marcas/marcas-6.png" alt="">
        </slider>
      </section>
    </main>

    <%- include('partials/footer') %>
    <%- include('partials/scripts') %>
</body>

</html>