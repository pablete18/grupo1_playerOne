<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head',{
        title : 'PROFILE'
    }) %>

<body class="register">
    <%- include('partials/header') %>

    <main class="container mt-5">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 mx-auto">
                <div class="card shadow">
                  <div class="card-body">
                    <h3>Mi perfil</h3>
                    <hr>
                    <form class="row" action="/users/update-profile?_method=PUT" method="POST">
                        <div class="col-12 col-md-6 mb-3">
                            <label class="form-label" for="name">Nombre</label>
                            <input class="form-control" type="text" id="name" name="name" value="<%= name %>">
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label class="form-label" for="lastName">Apellido</label>
                            <input class="form-control" type="text" id="lastName" name="lastName" value="<%= lastName %>">
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label class="form-label" for="birthday">Cumpleaños</label>
                            <input class="form-control" type="date" id="birthday" name="birthday">
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label class="form-label" for="gender">Género</label>
                            <select class="form-select" name="gender" id="gender">
                                <option selected hidden value="">Seleccione su género</option>
                                <option value="v">Hombre</option>
                                <option value="m">Mujer</option>
                                <option value="o">Prefiero no decirlo</option>
                            </select>
                        </div>
                        <div class="col-12 col-md-6 mb-3">
              
                            <div class="row">
                              
                                  <label class="form-label" for="gender">Preferencias</label>
                                  <select class="form-select" name="gender" id="gender">
                                      <option selected hidden value="">Seleccione su Consola</option>
                                      <option value="P">Playstation</option>
                                      <option value="G">Pc Gamer</option>
                                      <option value="R">Game Retro</option>
                                  </select>
                                
                        
                                 
                            </div>
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                          <label class="form-label" for="address">Direccion</label>
                          <input class="form-control" type="text" id="address" name="address" value=" ej: calle falsa 123">
                        </div>
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-dark">Registrate</button>
                        </div>
                    </form>
                  </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>